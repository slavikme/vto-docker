#!/usr/bin/env bash

su www-data <<EOSU

cd /var/www/html/app/etc

cp -f config.install.php config.php

cd /var/www/html

bin/magento setup:install --base-url=$MAGENTO_URL --backend-frontname=m --language=$MAGENTO_LANGUAGE --timezone=$MAGENTO_TIMEZONE --currency=$MAGENTO_DEFAULT_CURRENCY --db-host=$MYSQL_HOST --db-name=$MYSQL_DATABASE --db-user=$MYSQL_USER --db-password=$MYSQL_PASSWORD --use-secure=0 --base-url-secure=0 --use-secure-admin=0 --admin-firstname=$MAGENTO_ADMIN_FIRSTNAME --admin-lastname=$MAGENTO_ADMIN_LASTNAME --admin-email=$MAGENTO_ADMIN_EMAIL --admin-user=$MAGENTO_ADMIN_USERNAME --admin-password=$MAGENTO_ADMIN_PASSWORD

cd /var/www/html/app/etc

cp -f config.upgrade.php config.php

bin/magento setup:upgrade

EOSU